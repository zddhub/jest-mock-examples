{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": ["es2016"]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["./node_modules"]
}
